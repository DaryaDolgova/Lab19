using namespace std;

#include <iostream>

int main() 
{
	int N, M, i, j, mi, ma, w, min, max;

	cout << "M="; cin >> M;
	cout << "N="; cin >> N;
	int** A = new int* [M];
	max = 0; min = 9999999;

	for (i = 1; i <= M; i++) 
	{
		A[i] = new int[N];
		for (j = 1; j <= N; j++) 
		{
			cin >> A[i][j];
		}
	}

	for (i = 1; i <= M; i++) 
	{
		for (j = 1; j <= N; j++) 
		{
		    if (A[i][j] > max) { max = A[i][j]; ma = j; }
			if (A[i][j] < min) { min = A[i][j]; mi = j; }
		}
	}

	cout << "MAX= " << max << endl;
	cout << "MIN= " << min << endl;
	for (i = 1; i <= M; i++) 
	{
			w = A[i][mi];
			A[i][mi] = A[i][ma];
			A[i][ma] = w;
	}

	for (i = 1; i <= M; i++) 
	{
		for (j = 1; j <= N; j++) 
		{
			cout << A[i][j] << "\t";
			if (j % N == 0)
				cout << endl;
		}
	}

	return 0;

}
